<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                   <android.widget.Button
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_rnd_5"
                    android:text="back"
                    android:textColor="@color/black"
                    android:textSize="10sp" />


               <!-- <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text="Settings"
                    android:textColor="@color/black"
                    android:textSize="12sp" />-->


                        <androidx.appcompat.widget.AppCompatButton
                            android:textSize="11sp"
                            android:id="@+id/pending"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@drawable/button_rnd_red_filled_oval"
                            android:text="Pending(4)"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                        <androidx.appcompat.widget.AppCompatButton
                            android:textSize="11sp"
                            android:id="@+id/approved"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/pinLayout"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@drawable/oval_red_border"
                            android:text="Approved"
                            android:textAllCaps="false"
                            android:textColor="@color/red" />
                        <androidx.appcompat.widget.AppCompatButton
                            android:textSize="11sp"
                            android:id="@+id/rejected"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/pinLayout"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@drawable/oval_red_border"
                            android:text="Rejected"
                            android:textAllCaps="false"
                            android:textColor="@color/red" />
                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_house" />
                    </LinearLayout>



            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/header" >

            <LinearLayout
                android:layout_marginLeft="@dimen/_90sdp"
                android:layout_marginRight="@dimen/_90sdp"
                android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:visibility="gone"
                    android:id="@+id/brandPending"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_below="@id/pinLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/oval_red_border"
                    android:text="Brand Pending"
                    android:textAllCaps="false"
                    android:textColor="@color/red" />
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="11sp"
                    android:id="@+id/post"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:layout_below="@id/pinLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/button_rnd_red_filled_oval"
                    android:text="Post(4)"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="11sp"
                    android:id="@+id/rolls"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:layout_below="@id/pinLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/oval_red_border"
                    android:text="Rolls"
                    android:textAllCaps="false"
                    android:textColor="@color/red" />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/lay_round_bg_white"
                android:layout_margin="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="vertical">
            <TextView
                android:id="@+id/selectedType"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="List of Post Pending For Approval"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>