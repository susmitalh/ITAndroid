<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ceratepost.UploadPostmanual">
    <LinearLayout
        android:id="@+id/header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageButton
            android:id="@+id/back"
            android:background="@null"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Upload your post"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_below="@+id/header"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:id="@+id/lo"
        android:layout_below="@+id/header"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Create post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/paste_link"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:hint="Paste link here"
                android:background="@drawable/lay_round_bg_grey"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="OR"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/choose_file"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                android:text="Choose file"
                android:background="@drawable/lay_round_bg_grey"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <TextView
                android:id="@+id/selected_type"
                android:gravity="left"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/lay_round_bg_grey"
                android:textColor="@color/white"
                android:text="Image Selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/upload_thuimb"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <RelativeLayout
                android:id="@+id/videowrapper"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/videoview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
                <ProgressBar
                    android:id="@+id/og_loader"
                    android:visibility="gone"
                    android:padding="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
                <ImageButton
                    android:id="@+id/pause_play"
                    android:layout_below="@+id/videoview"
                    android:background="@null"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/headline"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/lay_round_bg_grey"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Sub header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/sub_header"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/lay_round_bg_grey"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/description"
                android:gravity="left|top"
                android:lines="5"
                android:maxLines="10"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/lay_round_bg_grey"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="100dp" />


        <LinearLayout
            android:id="@+id/admin_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:text="Select brand "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/brand_optional_tag"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/com_facebook_blue"
                    android:text="(Optional)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/select_brand"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:tag=""
                android:text="Select brand"
                android:focusable="false"
                android:background="@drawable/lay_round_bg_grey"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:text="Select items "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/com_facebook_blue"
                    android:text="(Optional)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/select_items"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:tag=""
                android:text="Select items"
                android:focusable="false"
                android:background="@drawable/lay_round_bg_grey"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:text="Button type "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/com_facebook_blue"
                    android:text="(Optional)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/choose_button"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:tag=""
                android:text="Choose button"
                android:focusable="false"
                android:background="@drawable/lay_round_bg_grey"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
            <Button
                android:id="@+id/submit"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="12sp"
                android:text="Post"
                android:background="@drawable/lay_round_bg_grey"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/progress"
        android:visibility="gone"
        android:background="@color/transparent_black"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/rr"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:layout_marginTop="15dp"
            android:text="Uploading please wait"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_below="@+id/rr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>