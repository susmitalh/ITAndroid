<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select timer"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/range_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="60s"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <com.appyvet.materialrangebar.RangeBar
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/seekbar"
                app:mrb_connectingLineColor="@color/black"
                app:mrb_connectingLineWeight="6dp"
                app:mrb_rangeBar="true"
                app:mrb_selectorSize="12dp"
                app:mrb_tickHeight="0dp"
                app:mrb_selectorColor="@color/black"
                app:mrb_pinTextColor="@color/transparent"
                app:mrb_pinColor="@color/transparent"
                app:mrb_rangeBarColor="@color/greylight1"
                app:mrb_tickStart="0"
                app:mrb_tickEnd="18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:id="@+id/start_recording_layout"
                android:background="@color/black">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start shooting"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>


</FrameLayout>