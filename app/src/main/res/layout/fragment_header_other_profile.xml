                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:clipToPadding="false"
                android:elevation="15dp"
                app:cardElevation="15dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:drawableLeft="@drawable/ic_film"
                            android:gravity="center_vertical"
                            android:text=" Rolls and short videos"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:drawableTint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/button_rnd_red"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="View all"
                            android:textColor="@color/red_main_change"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rolls_videos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/create_rolls"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_rnd_red"
                            android:drawableLeft="@drawable/ic_camera"
                            android:drawableTint="@color/red_main_change"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:text="Create "
                            android:textColor="@color/red_main_change"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/my_short_videos"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_rnd_red"
                            android:gravity="center"
                            android:padding="5dp"
                            android:paddingLeft="10dp"
                            android:text="My short videos"
                            android:textColor="@color/red_main_change"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</layout>
