<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.home.header.HeaderFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/prof_det_section"
                android:layout_below="@+id/header"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilepic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/user_name"
                    android:text="User"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/facebook"
                        android:drawableLeft="@drawable/ic_facebook"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/instagram"
                        android:drawableLeft="@drawable/ic_instagram"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/youtube"
                        android:drawableLeft="@drawable/ic_youtube"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/twitter"
                        android:drawableLeft="@drawable/ic_twitter"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />

                   <!-- <TextView
                        android:id="@+id/linkedin"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />-->
                </LinearLayout>

                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/follow"
                        android:layout_width="100dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="24dp"
                        android:drawableRight="@drawable/ic_person_check"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edt_rnd_4"
                        android:text="Follow"
                        android:tag=""
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="100dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edt_rnd_4"
                        android:text="Message"
                        android:drawableRight="@drawable/ic_lt_logo_icon"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/share"
                        android:layout_width="100dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edt_rnd_4"
                        android:text="Share"
                        android:drawableTint="@color/black"
                        android:drawableRight="@drawable/ic_send"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/show_hide"
                    android:drawableLeft="@drawable/ic_baseline_more_horiz_24"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:text="  Show more info"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/moreinfolayout"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/phone"
                        android:drawableLeft="@drawable/ic_telephone"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="7012967301"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_envelope"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text=" email@gmail.com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_person_badge"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text=" Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/posts"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_images"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text=" Posts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/likes"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_like"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text=" Likes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/views"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_eye"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text=" Views"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/comments"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_chat_left_text"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text=" Comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/joinedon"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_person_check"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text=" 2021, Aug 4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_chat_square_text"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text=" status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:background="@color/grey1"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/my_location"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:drawableLeft="@drawable/ic_geo_alt"
                android:textColor="@color/black"
                android:text="  Your Location"
                android:layout_width="350dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />


            <RelativeLayout
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    android:text="Choose Your Order Type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="Choose Your Order Type"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <RelativeLayout
                    android:background="@drawable/tile_home"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/delivery" />

                    <TextView
                        android:gravity="center"
                        android:text="Delivery"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:background="@color/transparent_black"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/tile_home"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dinein" />

                    <TextView
                        android:gravity="center"
                        android:text="Dine in"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:background="@color/transparent_black"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/tile_home"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pickup" />

                    <TextView
                        android:gravity="center"
                        android:text="Pickup"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:background="@color/transparent_black"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/tile_home"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/order_status" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent_black"
                        android:gravity="center"
                        android:text="Order status"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/tile_home"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/order_history"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:gravity="center"
                        android:text="Order history"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:background="@color/transparent_black"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/order_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="Choose Your Order Type"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="Choose Your Order Type"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/order_list"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tile_home">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/delivery" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/order_type_text_bg"
                        android:gravity="center"
                        android:text="Delivery"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <RelativeLayout
                        android:id="@+id/order_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/order_fill"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tile_home">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dinein" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/order_type_text_bg"
                        android:gravity="center"
                        android:text="Dine in"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <RelativeLayout
                        android:id="@+id/order_dineIn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/order_fill"
                        android:visibility="gone" />


                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tile_home">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pickup" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/order_type_text_bg"
                        android:gravity="center"
                        android:text="Pickup"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <RelativeLayout
                        android:id="@+id/order_pickup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/order_fill"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tile_home">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/order_status" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/order_type_text_bg"
                        android:gravity="center"
                        android:text="Order status"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tile_home">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/order_history" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/order_type_text_bg"
                        android:gravity="center"
                        android:text="Order history"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </RelativeLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                app:cardElevation="20dp"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingBottom="15dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:text="Top brands"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/ti_viewAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/button_rnd_red"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="View all"
                            android:textColor="@color/red"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="5dp"
                        android:id="@+id/top_brands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:text="Most popular videos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="5dp"
                        android:id="@+id/most_pop_videos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="15dp"
                android:elevation="15dp"
                android:clipToPadding="false"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                app:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingBottom="15dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:drawableLeft="@drawable/ic_film"
                            android:gravity="center_vertical"
                            android:text=" Rolls and short videos"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/button_rnd_red"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="View all"
                            android:textColor="@color/red"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="5dp"
                        android:id="@+id/rolls_videos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</layout>
